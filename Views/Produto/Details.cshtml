@model Produto

<div class="container">
    <div class="row">
        <div class="card">

            <div class="text-center">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="" />
            </div>

            <div class="card-block">
                <h2 class="card-title">@Model.Nome</h2>
                <p class="card-text"><h5>@Model.DescricaoDetalhada</h5></p>

                <p class="btn btn-gruop align-content-lg-end">

                    <a asp-controller="Produto" asp-action="List"
                       class="btn btn-outline-info">Ver todos os Produtos</a>


                    <a class="btn btn-primary" id="cardButton" asp-controller="CarrinhoCompra"
                       asp-action="AdicionarItemNoCarrinhoCompra" asp-route-produtoId="@Model.ProdutoId">
                        Adicionar @Model.Nome ao Carrinho
                    </a>
                </p>
            </div>

        </div>
    </div>
</div>